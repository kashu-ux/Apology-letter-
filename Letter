<audio id="music" loop>
  <source src="https://cdn.pixabay.com/download/audio/2022/03/15/audio_3c6cfa3e9d.mp3" type="audio/mpeg">
</audio>

<script>
  const music = document.getElementById("music");
  const hearts = ["ğŸ’•","ğŸ’–","ğŸ’—","ğŸ’˜"];

  let audioCtx, analyser, data;

  document.body.addEventListener("click", () => {
    music.play();
    audioCtx = new (window.AudioContext || window.webkitAudioContext)();
    const src = audioCtx.createMediaElementSource(music);
    analyser = audioCtx.createAnalyser();
    src.connect(analyser);
    analyser.connect(audioCtx.destination);
    analyser.fftSize = 256;
    data = new Uint8Array(analyser.frequencyBinCount);
    animate();
  }, { once: true });

  function animate() {
    analyser.getByteFrequencyData(data);
    const bass = data.slice(0, 10).reduce((a,b)=>a+b)/10;
    if (bass > 90) {
      document.querySelector(".letter").classList.add("pulse");
      setTimeout(()=>document.querySelector(".letter").classList.remove("pulse"),200);
    }
    requestAnimationFrame(animate);
  }

  setInterval(() => {
    const h = document.createElement("div");
    h.className = "heart";
    h.textContent = hearts[Math.floor(Math.random()*hearts.length)];
    h.style.left = Math.random()*100 + "vw";
    h.style.fontSize = 20 + Math.random()*25 + "px";
    h.style.animationDuration = 4 + Math.random()*3 + "s";
    document.body.appendChild(h);
    setTimeout(()=>h.remove(),8000);
  }, 350);
</script>

</body>
